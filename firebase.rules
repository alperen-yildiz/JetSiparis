rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Keys koleksiyonu ve alt koleksiyonları
    match /keys/{licenseKey} {
      allow read, write: if true;
      
      // Kategoriler alt koleksiyonu
      match /categories/{categoryId} {
        allow read, write: if true;
        
        // Ürünler alt koleksiyonu (kategorinin altında)
        match /products/{productId} {
          allow read, write: if true;
        }
      }
      
      // Müşteriler alt koleksiyonu
      match /customers/{customerId} {
        allow read, write: if true;
        
        // Siparişler alt koleksiyonu (müşterinin altında)
        match /orders/{orderId} {
          allow read, write: if true;
        }
      }
    }
    
    // Diğer tüm koleksiyonlar için erişim engellendi
    match /{document=**} {
      allow read, write: if false;
    }
  }
}