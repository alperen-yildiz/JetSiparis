{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "JetSiparis",
  "version": "0.1.0",
  "identifier": "com.solosolf.jetsiparis",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "JetSiparış - Sipariş Yönetim Sistemi",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "resizable": true,
        "maximizable": true,
        "url": "index.html"
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": false,
      "menuOnLeftClick": false,
      "tooltip": "JetSiparış - Arka planda çalışıyor"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      },
      "nsis": {
        "headerImage": "../installer/assets/header.bmp",
        "sidebarImage": "../installer/assets/sidebar.bmp"
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/192x192.png",
      "icons/512x512.png"
    ]
  }
}
